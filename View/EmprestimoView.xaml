<UserControl x:Class="GestaoBibliotecaApp.View.EmprestimoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestaoBibliotecaApp.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <local:EmprestimoViewModel/>
    </UserControl.DataContext>


    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">

            <Grid Margin="0.5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Content="Leitor:" VerticalAlignment="Center"/>
                
                <ComboBox Grid.Column="1" Margin="0,0,0,10" Height="30"
                        ItemsSource="{Binding Leitores}"
                        DisplayMemberPath="Nome"
                        SelectedValuePath="LeitorId"
                        SelectedValue="{Binding NovoEmprestimo.LeitorId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                
                <Button Grid.Column="2"
                        Content="Atualizar Dados"
                        Width="125" Height="30"
                        Margin="10,-10,0,0"
                        Command="{Binding AtualizarLeitoresCommand}"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Margin="0.5">
                <Label Width="120" Content="Livro:" VerticalAlignment="Center"/>
                <ComboBox Width="300" Margin="0,0,0,10" Height="30" 
                          ItemsSource="{Binding Livros}"
                          DisplayMemberPath="Titulo"
                          SelectedValuePath="LivroId"
                          SelectedValue="{Binding NovoEmprestimo.LivroId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Width="120" Content="Data de Empréstimo:" VerticalAlignment="Center"/>
                <DatePicker Width="300" SelectedDate="{Binding NovoEmprestimo.DataEmprestimo}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0.5">
                <Label Width="120" Content="Data de Devolução:" VerticalAlignment="Center"/>
                <DatePicker Width="300" SelectedDate="{Binding NovoEmprestimo.DataDevolucao, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            
            <Button Grid.Column="1"
                    Content="Registar Empréstimo"
                    Width="125" Height="30" Margin="0,10,0,10"
                    Command="{Binding AdicionarEmprestimoCommand}"/>

            <StackPanel Orientation="Horizontal" Margin="0.10">
                <Label Width="150" Content="Nova Data de Devolução:" VerticalAlignment="Center"/>
                <DatePicker Width="270" SelectedDate="{Binding DataDevolucaoAtualizar, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <Button Content="Atualizar Empréstimo"
                    Width="125" Height="30" Margin="0,10,0,0"
                    Command="{Binding AtualizarDevolucaoCommand}"/>

            <Button Grid.Column="0"
                    Content="Eliminar Empréstimo"
                    Width="125" Height="30" Margin="630,-30,0,0"
                    Command="{Binding EliminarEmprestimoCommand}"/>

        </StackPanel>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Emprestimos}"
                  SelectedItem="{Binding EmprestimoSelecionado, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="0,10,0,0">

            <DataGrid.Columns>
                
                <DataGridTextColumn Header="Id" Binding="{Binding EmprestimoId}" Width="22"/>
                <DataGridTextColumn Header="Livro" Binding="{Binding TituloLivro}" Width="*"/>
                <DataGridTextColumn Header="Leitor" Binding="{Binding NomeLeitor}" Width="*"/>

                <DataGridTextColumn Header="Data Empréstimo" Width="*">
                    <DataGridTextColumn.Binding>
                        <Binding Path="DataEmprestimo" StringFormat="dd-MM-yyyy"/>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Data Devolução" Width="*">
                    <DataGridTextColumn.Binding>
                        <Binding Path="DataDevolucao" StringFormat="dd-MM-yyyy"/>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
            
            </DataGrid.Columns>

        </DataGrid>

    </Grid>
    
</UserControl>
