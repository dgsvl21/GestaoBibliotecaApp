<UserControl x:Class="GestaoBibliotecaApp.View.HistoricoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestaoBibliotecaApp.ViewModels" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.DataContext>
        <local:HistoricoViewModel/>
    </UserControl.DataContext>

    <Grid Margin="10">
        <StackPanel Orientation="Vertical" Margin="0,0,0,10">

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Tipo de Histórico:" Width="120"/>
                <ComboBox Width="200" Height="30"
                          ItemsSource="{Binding TiposHistorico}"
                          SelectedItem="{Binding TipoSelecionado, Mode=TwoWay}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Selecionar:" Width="120"/>
                <ComboBox Width="300" Height="30"
                          ItemsSource="{Binding OpcoesFiltro}"
                          DisplayMemberPath="NomeOuTitulo"
                          SelectedItem="{Binding EntidadeSelecionada, Mode=TwoWay}"/>
                <Button Content="Atualizar Dados"
                        Width="130" Margin="10,0,0,0"
                        Command="{Binding AtualizarDadosCommand}"/>
            </StackPanel>

            <Button Content="Ver Histórico"
                    Width="125" Height="30" Margin="0,3,0,0"
                    Command="{Binding CarregarHistoricoCommand}"/>
        </StackPanel>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding HistoricoFiltrado}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="0,120,0,0">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding EmprestimoId}" Width="25"/>
                <DataGridTextColumn Header="LivroId" Binding="{Binding LivroId}" Width="46"/>
                <DataGridTextColumn Header="Livro" Binding="{Binding TituloLivro}" Width="*"/>
                <DataGridTextColumn Header="LeitorId" Binding="{Binding LeitorId}" Width="51"/>
                <DataGridTextColumn Header="Leitor" Binding="{Binding NomeLeitor}" Width="*"/>
                
                <DataGridTextColumn Header="Data Empréstimo"
                            Binding="{Binding DataEmprestimo, StringFormat=\{0:dd-MM-yyyy\}}"
                            Width="*"/>

                <DataGridTextColumn Header="Data Devolução"
                            Binding="{Binding DataDevolucao, StringFormat=\{0:dd-MM-yyyy\}}"
                            Width="*"/>
            </DataGrid.Columns>


        </DataGrid>
    </Grid>
    
</UserControl>
