<UserControl x:Class="GestaoBibliotecaApp.View.LivroView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestaoBibliotecaApp.ViewModel"
             mc:Ignorable="d" 
             Height="450" Width="800">
    
    <UserControl.DataContext>
        <local:LivroViewModel/>
    </UserControl.DataContext>

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="0.5">
                <Label Width="80" Content="Título:" VerticalAlignment="Center"/>
                <TextBox Width="300" Margin="0,0,0,10" Height="30" Text="{Binding NovoLivro.Titulo, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0.5">
                <Label Width="80" Content="Autor:" VerticalAlignment="Center"/>
                <TextBox Width="300" Margin="0,0,0,10" Height="30" Text="{Binding NovoLivro.Autor, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0.5">
                <Label Width="80" Content="Categoria:" VerticalAlignment="Center"/>
                <ComboBox Width="300" Height="30"
              ItemsSource="{Binding Categorias}"
              DisplayMemberPath="Nome"
              SelectedValuePath="Id"
              SelectedValue="{Binding NovoLivro.CategoriaId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <Button Content="Adicionar Livro"
                Width="150" Height="30" Margin="0,10,0,0"
                Command="{Binding AdicionarLivroCommand}"/>

            <Button Content="Eliminar Livro"
                    Width="150" Height="30" Margin="0,10,0,0"
                    Command="{Binding EliminarLivroCommand}"/>

        </StackPanel>

        <DataGrid Grid.Row="1"
              ItemsSource="{Binding Livros}"
              SelectedItem="{Binding LivroSelecionado}"
              ColumnWidth="*"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              Margin="0,10,0,0">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Width="22" Binding="{Binding LivroId}"/>
                <DataGridTextColumn Header="Título" Binding="{Binding Titulo}"/>
                <DataGridTextColumn Header="Autor" Binding="{Binding Autor}" />
                <DataGridTextColumn Header="Categoria" Binding="{Binding NomeCategoria}"/>
            </DataGrid.Columns>


        </DataGrid>

    </Grid>
</UserControl>
